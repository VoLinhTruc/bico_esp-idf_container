// This file is cloned from https://github.com/espressif/esp-idf/tree/master/tools/docker
{
	"name": "bico_esp-idf_container",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"idf.espIdfPath": "/opt/esp/idf",
				"idf.toolsPath": "/opt/esp",
				"idf.gitPath": "/usr/bin/git",
				
				"idf.flashPartitionToUse": "app",
				"idf.flashType": "UART",
				"idf.monitorPort": "/dev/ttyACM0",
				"idf.port": "/dev/ttyACM0",
				"idf.monitorBaudRate": "115200",
				"idf.flashBaudRate": "921600",
				"idf.pythonInstallPath": "/usr/bin/python",
				"idf.adapterTargetName": "esp32c3",
				"idf.openOcdConfigs": [
					"interface/esp_usb_jtag.cfg",
					"board/esp32c3-builtin.cfg"
				],
				"idf.launchMonitorOnDebugSession": true,
				"idf.monitorNoReset": true,
			},
			"extensions": [
				"espressif.esp-idf-extension",
				"espressif.esp-idf-web"
			]
		}
	},
	// Container runtime configuration
	"runArgs": [
		"--name", "bico_esp-idf_container",
		"--privileged",
		// "--network", "host",
	],
	"mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
	],
	// Add DISPLAY environment variable
	"containerEnv": {
		"DISPLAY": "${localEnv:DISPLAY}"
	},
}